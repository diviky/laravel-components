<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UnusedClass>
        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PossiblyUnusedMethod>
        <PossiblyUnusedProperty>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PossiblyUnusedProperty>
        <ClassMustBeFinal>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </ClassMustBeFinal>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <PossiblyNullReference>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PossiblyNullReference>
        <PossiblyInvalidCast>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PossiblyInvalidCast>
        <UndefinedInterfaceMethod>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UndefinedInterfaceMethod>
        <RiskyTruthyFalsyComparison>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </RiskyTruthyFalsyComparison>
    </issueHandlers>
</psalm>